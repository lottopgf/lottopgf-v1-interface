{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["../common/src/*"]
    }
  },
  "include": ["src/**/*"]
}
